
= hook(:lead_top_section, self, f: f) do
  .section
    %table
      %tr
        %td
          .label.top{ class: "#{Setting.require_first_names ? 'req' : nil}" } #{t :first_name}:
          = f.text_field :first_name, autofocus: true, placeholder: "Enter your first name"
        %td= spacer
        %td
          .label.top #{t :last_name}:
          = f.text_field :last_name, placeholder: "Enter your last name"
      %tr
        %td
          .label #{t :email}:
          = f.text_field :email, placeholder: "Enter your email"
        %td= spacer
        %td
          .label #{t :phone}:
          = f.text_field :phone, placeholder: "Enter your phone number"

      - if Setting.background_info && Setting.background_info.include?(:lead)
        %tr
          %td(colspan="3")
            .label= t(:background_info) + ':'
            = f.text_area :background_info, style: "width:500px", rows: 3

      = render partial: "/shared/tags", locals: {f: f, span: 3}

      = hook(:lead_top_section_bottom, self, f: f)
